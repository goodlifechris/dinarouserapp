<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:orientation="vertical"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">

        <TextView
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Categories"
            android:textSize="14sp" />


<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/recyclerView"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>-->


        <androidx.cardview.widget.CardView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="4dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/img_eating_out"
                        android:layout_width="30dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_eating"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="h, 83:83"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/constraint_middle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        app:layout_constraintHorizontal_weight="2.5"
                        app:layout_constraintStart_toEndOf="@id/img_eating_out"
                        app:layout_constraintEnd_toStartOf="@id/constraint_end"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/txt_eat_out"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.AppCompat.Body2"
                            android:layout_toRightOf="@id/img_eating_out"
                            android:text="Eating Out"
                            android:textColor="@color/colorBlack" />


                        <ProgressBar
                            android:id="@+id/progress_eat_out"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:layout_below="@id/txt_eat_out"
                            android:layout_marginTop="8dp"
                            android:max="100"
                            android:progress="100"
                            android:progressDrawable="@drawable/progressbar_c"
                            android:minHeight="10dp"
                            android:maxHeight="10dp"
                            android:layout_marginRight="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/constraint_end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintHorizontal_weight="1"
                        android:gravity="top|start"
                        app:layout_constraintStart_toEndOf="@id/constraint_middle"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/txt_amount_eat_out"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-KES 2,499"
                            android:textColor="@color/colorBlack" />


                        <TextView
                            android:id="@+id/txt_reciept_eat_out"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Transactions"
                            android:textColor="#FF3CA3F5"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="4dp"
                            android:textSize="9dp" />



                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/img_entertainment"
                        android:layout_width="30dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_entertainment"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="h, 79:72"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />

                    <LinearLayout
                        android:id="@+id/constraint_middle1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        app:layout_constraintHorizontal_weight="2.5"
                        app:layout_constraintStart_toEndOf="@id/img_entertainment"
                        app:layout_constraintEnd_toStartOf="@id/constraint_end1"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/txt_entertainment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img_eating_out"
                            android:text="Enjoyment"
                            style="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorBlack" />


                        <ProgressBar
                            android:id="@+id/progress_entertainment"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:layout_below="@id/txt_eat_out"
                            android:layout_marginTop="8dp"
                            android:max="100"
                            android:progress="40"
                            android:progressDrawable="@drawable/progressbar_c"
                            android:minHeight="10dp"
                            android:maxHeight="10dp"
                            android:layout_marginRight="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/constraint_end1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintHorizontal_weight="1"
                        android:gravity="top|start"
                        app:layout_constraintStart_toEndOf="@id/constraint_middle1"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/txt_amount_entertainment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="-KES 2,499"
                            android:textColor="@color/colorBlack" />


                        <TextView
                            android:id="@+id/txt_reciept_entertainment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Transactions"
                            android:textColor="#FF3CA3F5"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="4dp"
                            android:textSize="9dp" />


                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/img_travel"
                        android:layout_width="30dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="3dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_travel"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="h, 75:75"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/constraint_middle2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        app:layout_constraintHorizontal_weight="2.5"
                        app:layout_constraintStart_toEndOf="@id/img_travel"
                        app:layout_constraintEnd_toStartOf="@id/constraint_end2"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/txt_travel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img_eating_out"
                            android:text="Travel"
                            android:textColor="@color/colorBlack"
                            style="@style/TextAppearance.AppCompat.Body2" />


                        <ProgressBar
                            android:id="@+id/progress_travel"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:layout_below="@id/txt_eat_out"
                            android:layout_marginTop="8dp"
                            android:max="100"
                            android:progress="60"
                            android:progressDrawable="@drawable/progressbar_c"
                            android:minHeight="10dp"
                            android:maxHeight="10dp"
                            android:layout_marginRight="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/constraint_end2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintHorizontal_weight="1"
                        android:gravity="top|start"
                        app:layout_constraintStart_toEndOf="@id/constraint_middle2"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/txt_amount_travel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="-KES 2,499"
                            android:textColor="@color/colorBlack" />


                        <TextView
                            android:id="@+id/txt_reciept_travel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Transactions"
                            android:textColor="#FF3CA3F5"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="4dp"
                            android:textSize="9dp" />


                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/img_bills"
                        android:layout_width="30dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_bills"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="h, 55:57"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/constraint_middle3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        app:layout_constraintHorizontal_weight="2.5"
                        app:layout_constraintStart_toEndOf="@id/img_bills"
                        app:layout_constraintEnd_toStartOf="@id/constraint_end3"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/txt_bills"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img_eating_out"
                            android:text="Bills"
                            style="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/colorBlack" />


                        <ProgressBar
                            android:id="@+id/progress_bills"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:layout_below="@id/txt_eat_out"
                            android:layout_marginTop="8dp"
                            android:max="100"
                            android:progress="80"
                            android:progressDrawable="@drawable/progressbar_c"
                            android:minHeight="10dp"
                            android:maxHeight="10dp"
                            android:layout_marginRight="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/constraint_end3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintHorizontal_weight="1"
                        android:gravity="top|start"
                        app:layout_constraintStart_toEndOf="@id/constraint_middle3"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/txt_amount_bills"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="-KES 2,499"
                            android:textColor="@color/colorBlack" />


                        <TextView
                            android:id="@+id/txt_reciept_bills"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Transactions"
                            android:textColor="#FF3CA3F5"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="4dp"
                            android:textSize="9dp" />


                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/img_shopping"
                        android:layout_width="30dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_shopping"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="h, 61:57"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />

                    <LinearLayout
                        android:id="@+id/constraint_middle4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        app:layout_constraintHorizontal_weight="2.5"
                        app:layout_constraintStart_toEndOf="@id/img_shopping"
                        app:layout_constraintEnd_toStartOf="@id/constraint_end4"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/txt_shopping"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img_eating_out"
                            style="@style/TextAppearance.AppCompat.Body2"
                            android:text="Shopping"
                            android:textColor="@color/colorBlack" />


                        <ProgressBar
                            android:id="@+id/progress_shopping"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:layout_below="@id/txt_eat_out"
                            android:layout_marginTop="8dp"
                            android:max="100"
                            android:progress="20"
                            android:progressDrawable="@drawable/progressbar_c"
                            android:minHeight="10dp"
                            android:maxHeight="10dp"
                            android:layout_marginRight="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/constraint_end4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintHorizontal_weight="1"
                        android:gravity="top|start"
                        app:layout_constraintStart_toEndOf="@id/constraint_middle4"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/txt_amount_shopping"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="-KES 2,499"
                            android:textColor="@color/colorBlack" />


                        <TextView
                            android:id="@+id/txt_reciept_shopping"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Transactions"
                            android:textColor="#FF3CA3F5"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="4dp"
                            android:textSize="9dp" />


                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>









            </LinearLayout>

            </ScrollView>


        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>
