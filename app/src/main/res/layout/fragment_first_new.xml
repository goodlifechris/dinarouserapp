<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FirstNewFragment">

    <ImageView
        android:id="@+id/imageViewBg"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="match_parent"
        tools:src="@drawable/img_intro_one"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingTop="@dimen/marginStart_80dp"
        android:paddingEnd="@dimen/margin_24dp"
        android:paddingStart="@dimen/margin_24dp"
        android:background="@drawable/background_white_gradient"
        android:paddingBottom="@dimen/marginStart_80dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/tvDinaro"
            android:scaleType="fitStart"
            android:src="@drawable/new_logo"
            android:layout_height="@dimen/margin_30" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin_24dp"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Small"
            android:text="Payments you'll come to loooove!"/>
        <TextView
            android:layout_width="wrap_content"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_height="wrap_content"
            android:text="Enjoy making payments."/>
    </LinearLayout>

</FrameLayout>