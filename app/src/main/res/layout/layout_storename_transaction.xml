<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relatiVelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/imageview_paypal"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="fitXY"
        android:src="@drawable/zuku"/>

    <TextView
        android:id="@+id/txt_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageview_paypal"
        android:text="JO31012019"
        style="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#000"
        android:layout_marginLeft="18dp"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_code"
        android:layout_alignStart="@+id/txt_code"
        android:layout_alignLeft="@+id/txt_code"
        android:layout_marginTop="4dp"
        android:textSize="9dp"
        android:text="Transaction ID" />


    <TextView
        android:id="@+id/txt_Ksh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/KES"
        android:layout_alignParentRight="true"

        android:textColor="@color/colorBlack"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:id="@+id/txt_reciept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View receipt"
        android:textColor="#FF3CA3F5"
        android:layout_below="@id/txt_Ksh"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:textSize="9dp" />

</RelativeLayout>